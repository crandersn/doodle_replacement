<head>
  <div class="menu">
    <div class="container-fluid">
      <div class="navbar-header">
        <a href="homepage">Current Polls</a>
      </div>
      <div>
        <ul class="nav navbar-nav navbar-right">
          <li><a>Logged in as: <%= @current_user %></a></li>

          <li> <%= link_to 'Log Out', destroy_admin_session_path, method: :delete %> </li>
          <!--          <li><a href="#"><span class="glyphicon glyphicon-log-out"></span> Log Out </a></li>-->
        </ul>
      </div>
    </div>
  </div>
</head>


<body>

<h1 class="invite_header"> <%= @poll.poll_name %>'s Invitees</h1>

<table id="poll_table" style="width:500px;margin:0 auto;font-size:20px;position:relative;top:-40px" class="table table-striped table-sm">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col" >Phone Number</th>
  </tr>
  </thead>

  <tbody>

    <% @invitees.each do |invitee| %>
    <tr class="active">
      <td><%= invitee.name %></td>
      <td><%= invitee.phone_number %></td>
      <td><%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, "delete_invitee?delete_invitee="+invitee.id.to_s, {class: 'btn btn-danger', type: 'button'} %></td>
    </tr>
    <% end %>

    <form action="/admin/add_invitee" method="get">
      <tr class="active">
          <td>
            <%= text_field_tag :name, nil, class: "form-control"%>
            <label style="font-size:17px;color:grey">Name of Invitee</label>
          </td>
          <td>
            <%= text_field_tag :phone_number, nil, class: "form-control"%>
            <label style="font-size:17px;color:grey">Ex. Format: (1)5635551234</label>
          </td>
          <td><%= button_tag "<span class='glyphicon glyphicon-plus'></span>".html_safe, :class => 'btn btn-primary form-control' %></td>
        </tr>
        <%flash[:poll_id] = @poll.id %>
    </form>

</table>

<div>
  <%flash[:poll_invite] = @poll.id %>

  <%=  button_to 'Send Invites', "send_invites?poll_id="+@poll.id.to_s , {class: 'btn btn-secondary send_invites_button', type: 'button', method: 'get'} %>

</div>

</body>


<% content_for :form_validation_javascript do %>
  <%= javascript_include_tag "FormValidation.js" %>
<% end %>