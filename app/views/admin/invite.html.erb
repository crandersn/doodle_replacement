<body>

<h1 class="invite_header"> <%= @poll.poll_name %>'s Invitees</h1>

<table id="poll_table" style="width:500px;margin:0 auto;font-size:20px;position:relative;top:-40px" class="table table-striped table-sm">
  <thead>
  <tr>
    <th scope="col">Name</th>
    <th scope="col" >Phone Number</th>
  </tr>
  </thead>

  <tbody>

    <% @invitees.each do |invitee| %>

    <tr class="active">
      <td><%= invitee.name %></td>
      <td><%= invitee.phone_number %></td>
      <td><%= link_to "<span class='glyphicon glyphicon-remove'></span>".html_safe, "delete_invitee?delete_invitee="+invitee.id.to_s, {class: 'btn btn-danger', type: 'button'} %></td>
    </tr>

    <% end %>

    <%= form_tag 'add_invitee?poll_add=1', method: :get do %>


  <tr class="active">
      <td>
        <%= text_field_tag :name, nil, class: "form-control"%>
<!--        <input type="text" id="typeText" class="form-control" width="20px"/>-->
        <label style="font-size:17px;color:grey">Name of Invitee</label>
      </td>

      <td>
        <%= text_field_tag :phone_number, nil, class: "form-control"%>

<!--        <input type="text" id="typeText" class="form-control" width="20px"/>-->
        <label style="font-size:17px;color:grey">Format: (#)###-###-####</label>
      </td>
<!--      <td><%#= link_to "<span class='glyphicon glyphicon-plus'></span>".html_safe, "add_invitee?poll=" + @poll.id.to_s , {class: 'btn btn-primary', type: 'button'} %></td>-->
      <td><%= button_tag "<span class='glyphicon glyphicon-plus'></span>".html_safe, :class => 'btn btn-primary form-control' %></td>
    </tr>

        <%flash[:poll_id] = @poll.id %>
    <% end %>

</table>


